@model Web.Model.Admin.EnquiresViewModel
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">View / Reply Enquiry</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="new_table new_table-pop m-b-10">
                <table>
                    <tbody>
                        <tr>
                            <td><b> @Model.Name &nbsp;:&nbsp;&nbsp; </b><a href="#" style="color:#525252;text-decoration:underline"> @Model.Email </a></td>
                            <td style="text-align:right;padding: 20px 0px 10px;"> &nbsp;&nbsp;&nbsp; <b> (@Model.createdate) </b></td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align:justify">
                                @if (@Model.updatedby == 0)
                                {
                                    @Html.Raw(Model.message)
                                }
                                else
                                {
                                    @Html.Raw(Model.replymessage)
                                }
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">&nbsp;</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                @if (@Model.updatedby < 1)
                                {
                                    <textarea id="reply" name="reply" style="width: 100%;">  @Model.replymessage
                                  </textarea>
                                    <script type="text/javascript">
                                        CKEDITOR.replace('reply',
                                            {
                                                toolbar: 'Basic',
                                                uiColor: '#F9F8F8',
                                                maxLength: "7000",
                                                startupFocus: true
                                            });
                                    </script>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <input type="hidden" name="Subject" id="Subject" value="@Model.subject" />
            <input type="hidden" name="Email" id="Email" value="@Model.Email" />
        </div>
        <div class="modal-footer">
            @if (@Model.updatedby == 0)
            {
                <input type="button" name="login" id="login" class="btn btn-primary" onclick="replyenquire(@Model.Id)" value="Send">
            }
            <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>