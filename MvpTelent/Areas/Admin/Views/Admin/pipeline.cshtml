<script>
    function ActiveTab1(tabId) {

        url = "/Admin/Admin/Pipeline?Id=" + tabId;
        window.location.href = url;
    }
    function MovetocompanyDetail(Id) {
        var url = "/Admin/Admin/clientdetail?Ids=" + Id;
        window.location.href = url;
    }
</script>
<script src="~/MvpTelent_js/adminJs/CLIENTS.js"></script>
<div id="pipelinestatis_Popup" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Lead Stage</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="clientform" name="form-validation" method="POST">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="hidden" name="H_ContactIs" id="H_ContactIs" />
                                <input type="hidden" name="h_tId" id="h_tId" />
                                <label class="font-w-600">Select Status :</label>
                                @Html.DropDownList("LeadStatus", new SelectList(Model.PipelineStatusCollection, "Id", "Name"), new { @Id = "LeadStatus", @Name = "LeadStatus", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <input type="button" name="login" id="login" class="btn btn-primary" onclick="pipelinestatus()" value="Update">
                <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    function pipelinestatus() {
        model = {
            Id: $("#LeadStatus").val(),
            ContactIds: $("#H_ContactIs").val(),
        },
            $.get("/Admin/Admin/pipelinestatus", model, function (response) {
                setTimeout(function () { window.location.reload(); }, 2000);
                toastr.success("Pipeline status updated successfully.");
            });
    }
</script>
<script>
    var element = document.getElementById("Companies").setAttribute("aria-expanded", "true");
    var element = document.getElementById("Companies");
    element.classList.remove("collapsed");
    var element = document.getElementById("Companies");
