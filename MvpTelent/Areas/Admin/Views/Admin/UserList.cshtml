@model Web.Model.Admin.UserManagmentmodel
@{
    ViewBag.Title = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout .cshtml";
}
<main class="content">
    <div class="container-fluid p-0">
        <div class="row mb-2 mb-xl-4">
            <div class="col-auto d-none d-sm-block breadcrumb-1">
                <h3>User List</h3> 
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body filter-box">
                        <div class="row">
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="email" name="email" value="@Model.Email" placeholder="Please enter email" onchange="getEnquiresByEmail()" maxlength="45">
                            </div>
                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-primary w-100 border-0" onclick="getEnquiresByEmail()">Search</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-fade w-100 border-0" onclick="ResetUserlist()">Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card flex-fill">
                    <div class="card-header hr-b-1">
                        <h5 class="card-title mb-0">
                            User List
                        </h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped my-0 tr-golden">
                            <thead>
                                <tr>
                                    <th class="w-60px">
                                        S.No
                                    </th>
                                    <th>Name </th>
                                    <th>Email </th>
                                    <th>Phone No</th>
                                    <th>Role</th>
                                    <th class="w-100px text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int RowNo = 0;}
                                @if (Model.UserListcollection != null)
                                {
                                    foreach (var item in Model.UserListcollection)
                                    {
                                        <tr>
                                            <td> @{RowNo++;}@RowNo</td>
                                            <td>@item.FirstName</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phoneno</td>
                                            <td>@item.RoleName</td>
                                            <td class="table-action text-center">
                                                <a class="msz-noti" data-toggle="tooltip" data-placement="top" data-original-title="Edit" onclick="edituserlist('@item.Ids')">
                                                    <i class="far fa-fw fa-edit"></i>
                                                </a>
                                                <a class="msz-noti" data-toggle="tooltip" data-placement="top" data-original-title="Remove" onclick="deleteUsers(@item.Id)">
                                                    <i class="far fa-fw fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    if (Model.UserListcollection.Count() == 0)
                                    {
                                        <tr>
                                            <td class="text-left" colspan="7">
                                                <span class="no-data-found">
                                                    No Data found...
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <div class="card-body"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script src="~/Areas/Admin/Admin/UserManagment.js"></script>

<script>
    function getEnquiresByEmail() {
        var Email = $("#email").val();
        url = "/Admin/Admin/UserList?Email=" + Email;
        window.location.href = url;
    }
    function ResetUserlist() {
        url = "/Admin/Admin/UserList";
        window.location.href = url;
    }
</script>
<script>
    var element = document.getElementById("User_Management").setAttribute("aria-expanded", "true");
    var element = document.getElementById("User_Management");
    element.classList.remove("collapsed");
    var element = document.getElementById("User_Management");
    element.classList.add("show");
    var element = document.getElementById("User List+1");
    element.classList.add("active");
</script>