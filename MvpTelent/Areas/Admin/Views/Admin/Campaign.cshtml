@model Web.Model.Admin.CampaignModel
@{
    ViewBag.Title = "Campaign";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout .cshtml";
}
<main class="content">
    <div class="container-fluid p-0">
        <div class="row mb-2 mb-xl-4 position-relative">
            <div class="col-auto d-none d-sm-block breadcrumb-1">
                <h3>Email Campaigns</h3>
            </div>
            <div class="breadcum-2">
                <a class="btn-new-1"  onclick="NewCampaign(0)" data-toggle="modal" data-target="#add">
                    Add Campaign
                </a>
            </div>
        </div> 
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body filter-box">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-12">
                                        <input type="text" class="form-control" id="_Name" name="_Name" value="@Model.Name" placeholder="Please enter name" maxlength="30">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-primary w-100 border-0" onclick="getcampainByName()">Search</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-fade w-100 border-0" onclick="Reset()">Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card flex-fill">
                    <div class="card-header hr-b-1"> 
                        <h5 class="card-title mb-0">
                            Campaign List
                        </h5>

                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped my-0 tr-golden">
                            <thead>
                                <tr>

                                    <th class="w-60px">
                                        S.No
                                    </th>
                                    <th>Name</th>
                                    <th>Subject</th>
                                    <th>Contact Count</th>
                                    <th>Sent Contact Count</th>
                                    <th>Status</th>
                                    <th class="w-100px text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @{int RowNo = 0;}
                                @if (Model.campaigncollection != null)
                                {
                                    foreach (var item in Model.campaigncollection)
                                    {
                                        <tr>
                                            <td class="text-left width-46px">
                                                @{RowNo++;}@RowNo
                                            </td>
                                            <td>@item.Name</td>
                                            <td>@item.Subject</td>
                                            <td>@item.contactcount</td>
                                            <td>@item.sentcontactcount</td>
                                            <td>@item.StatusName</td>
                                            <td class="table-action text-center">
                                                <a data-toggle="tooltip" data-placement="top" data-original-title="Edit" onclick="NewCampaign(@item.Id)">
                                                    <i class="far fa-fw fa-edit"></i>
                                                </a>
                                                <a data-toggle="tooltip" data-placement="top" data-original-title="Remove" onclick="DeleteCampaign(@item.Id)">
                                                    <i class="far fa-fw fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    if (Model.campaigncollection.Count() == 0)
                                    {
                                        <tr>
                                            <td colspan="7">
                                                <span class="no-data-found">
                                                    No Data found...
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <div class="card-body"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main> 
<div id="AddCampaignPopup" class="modal fade " role="dialog"></div>
<script src="~/Areas/Admin/Admin/Campaign.js"></script>
<script>
    var element = document.getElementById("Email_Campaigns").setAttribute("aria-expanded", "true");
    var element = document.getElementById("Email_Campaigns");
    element.classList.remove("collapsed");
    var element = document.getElementById("Email_Campaigns");
    element.classList.add("show");
    var element = document.getElementById("Campaign List+1");
    element.classList.add("active");
</script>