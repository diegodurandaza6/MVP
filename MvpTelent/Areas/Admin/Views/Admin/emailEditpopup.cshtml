@model Web.Model.Admin.EmailTempleteViewModel
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel1"> Update Marketing Email</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
 
                    <form id="EmailTemplateForm_Popup">
                        <div class="row">
                            <div class="col-lg-12 col-form-group-m-b-15">
                                <div class="form-group">
                                    <label class="form-label" for="validation-password">Email Subject</label>
                                    <input type="text" maxlength="500" id="Subject" value="@Model.Subject" name="Subject" autocomplete="off" placeholder="Please enter email subject" class="form-control">
                                </div>
                            </div>
                            <div class="col-lg-12 col-form-group-m-b-15">
                                <div class="form-group">
                                    <label class="form-label"> Follow-Up 1</label>
                                    <textarea class="form-control" rows="2" id="Description1" name="Description1" placeholder="Follow-Up 1...">@Model.Description1</textarea>
                                </div>
                                <div class="form-group">
                                    <label class="form-label"> Follow-Up 2</label>
                                    <textarea class="form-control" rows="2" id="Description2" name="Description2" placeholder="Follow-Up 2...">@Model.Description2</textarea>
                                </div>
                                <div class="form-group">
                                    <label class="form-label"> Follow-Up 3</label>
                                    <textarea class="form-control" rows="2" id="Description3" name="Description3" placeholder="Follow-Up 3...">@Model.Description3</textarea>
                                </div>
                            </div>
                        </div>
                    </form>
        
        </div>
        <div class="modal-footer">
            <input type="button" name="login" id="sendemailpopup" class="btn btn-primary" style="border:none;" onclick="Updateemailsend(@Model.Id)" value="Update">
            <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>