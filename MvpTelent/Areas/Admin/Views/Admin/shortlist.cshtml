@model Web.Model.Client.ClientModel
@{
    ViewBag.Title = "shortlist";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout .cshtml";
}
<script src="~/Areas/Content/vendor/jquery/jquery.min.js"></script>
<section class="bread_crumbs">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <ul>
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">/</a></li>
                    <li><a href="#"> Candidate</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="table_search">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="user_candate">
                    <form class="form-inline">
                        <input type="text" class="form-control" id="_Name" name="_Name" placeholder="Please enter name">
                        <button type="button" class="search_btn">Search</button>
                        <button type="button" class="reset_btn">Reset</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="dashboard_table">
    <div class="container-fluid">
        <div class="client_table">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="text-left">Short List</h4>
                    <h3 class="text-right"></h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="color:#525252">
                                        S.No
                                    </th>
                                    <th style="color:#525252">
                                        Candidate Name
                                    </th>
                                    <th style="color:#525252">
                                        Phone Number
                                    </th>
                                    <th style="color:#525252">
                                        Client Name
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int RowNo = 0;}
                                @if (Model.GetShortList != null)
                                {
                                    foreach (var item in Model.GetShortList)
                                    {
                                        <tr>
                                            <td class="text-left width-46px">
                                                @{RowNo++;}@RowNo
                                            </td>
                                            <td>
                                                @item.CandidateName
                                            </td>
                                            <td>
                                                @item.Phone1
                                            </td>
                                            <td>
                                                @item.ClientName
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 