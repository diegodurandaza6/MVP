@model Web.Model.Candidate.CandidateModel
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel1">Work Experience </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="Candidateworkexperiencepopup" method="POST">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Company</label>
                            <input id="company" maxlength="50" autocomplete="off" class="form-control" value="@Model.Company" placeholder="Please enter company" name="company" type="text">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Title</label>
                            <input id="title" maxlength="50" autocomplete="off" class="form-control" value="@Model.Title" placeholder="Please enter title" name="title" type="text">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Start Date</label>
                            <input id="todate" autocomplete="off" class="form-control" value="@Model.Todate" placeholder="Please enter start date" name="todate" type="date">
                        </div>
                        <div class="form-group">
                            <label class="form-label">End Date</label>
                            <input id="fromdate" autocomplete="off" class="form-control" value="@Model.Fromdate" placeholder="Please enter end date" name="fromdate" type="date">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Description</label>
                            <textarea id="description"  rows="2" maxlength="3000" autocomplete="off" class="form-control" placeholder="Please enter description" name="description">@Model.description</textarea>
                      
                            <script type="text/javascript">
                                CKEDITOR.replace('description', {
                                    toolbar: [
                                        { name: 'basicstyles', items: ['NumberedList', 'BulletedList'] }
                                    ]
                                });
                            </script>
                        
                        </div>
                        <div class="form-group">
                            <label class="form-label">Visibility</label>
                            @Html.DropDownListFor(m => m.visibleid, new SelectList(Model.visibleidCollection, "Id", "Name"), "Please select visibility", new { @class = "form-control", @id = "visibleid", @Name = "visibleid" })
                        </div>
                    </div>
                </div>
            </form>

        </div>
        <div class="modal-footer">
            <input type="button" class="btn btn-primary" onclick="Admincreateworkexperiencecandidate(@Model.Id,@Model.CandidateId)" value="Save">
            <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>  

<script>
    $('#todate').datepicker({
        changeMonth: true,
        changeYear: true,
        showButtonPanel: true,
        dateFormat: "d-m-yy"
    });
    $('#fromdate').datepicker({
        changeMonth: true,
        changeYear: true,
        showButtonPanel: true,
        dateFormat: "d-m-yy"
    });
</script>