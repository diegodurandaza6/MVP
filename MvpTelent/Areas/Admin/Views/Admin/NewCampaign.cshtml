@model Web.Model.Admin.CampaignModel
<div class="modal-dialog " role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel1">
                Campaign Information
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
  
                    <form id="CampaignForm_Popup" name="EmailTemplateForm_Popup">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="form-label" for="validation-password-confirm">Campaign Type</label>
                                    @Html.DropDownListFor(m => m.campaigntypeid, new SelectList(Model.CampaigntypeCollection, "Id", "Name"), "Please select campaign type", new { @class = "form-control", @Id = "campaigntypeid", @Name = "campaigntypeid", @onchange = "getTagBytypeId(this.value)" })
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="validation-password-confirm">Select Tag</label>
                                    <div class="dropdown selected-tags">
                                        <button class="form-control dropdown-toggle text-left left-caret" type="button" id="tag-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Please select tag
                                        </button>
                                        
                                            <ul class="dropdown-menu campaign-information-popup" aria-labelledby="tag-dropdown" id="tag">
                                                <li>Please Select Campaign Type</li>
                                            </ul>                                        
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="validation-username">Name</label>
                                    <input type="text" maxlength="30" value="@Model.Name" id="Name" name="Name" autocomplete="off" placeholder="Please enter name" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="validation-password">Email Subject</label>
                                    <input type="text" maxlength="50" value="@Model.Subject" id="Subject" name="Subject" autocomplete="off" placeholder="Please enter email subject" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="validation-password-confirm">Email Content </label>
                                    <textarea class="form-control" rows="2" id="emailbody" name="emailbody" placeholder="Please enter description">@Model.emailbody</textarea>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="validation-password-confirm">Status </label>
                                    @Html.DropDownListFor(m => m.CStatusId, new SelectList(Model.CampaignstatusCollection, "Id", "Name"), "Please select status", new { @class = "form-control", @Id = "CStatusId", @Name = "CStatusId" })
                                </div>
                            </div>
                        </div>
                    </form>
            
        </div>
        <div class="modal-footer">
            <input type="button" name="login" id="login" class="btn btn-primary" onclick="AddUpdateCampaign(@Model.Id)" value="Save">
            <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
<input type="hidden" id="hdntagids" name="hdntagids" value="@Model.tagids" />
@if (Model.campaigntypeid > 0)
{
    <script>
        getTagBytypeId(@Model.campaigntypeid);
    </script>
}
<script>
    $('.dropdown-toggle').click(function () {
        $(this).next('.dropdown').slideToggle("fast");
    });
</script>