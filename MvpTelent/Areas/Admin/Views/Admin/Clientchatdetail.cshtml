@model Web.Model.Client.ClientModel
@{
    ViewBag.Title = "Clientchatdetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout .cshtml";
} 
<div id="CreateInterview_PopUp" class="modal fade" role="dialog"></div>

<main class="content">
    <div class="container-fluid p-0">
        <div class="row mb-2 mb-xl-4">
            <div class="col-auto d-none d-sm-block breadcrumb-1">
                <h3>
                    Details of Interview Request by Client
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">


                <div class="card flex-fill">
                    <div class="card-header hr-b header-golden-bg">
                        <h5 class="card-title mb-0">
                            Client & Candidate Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <ul class="nav detail-tabs" role="tablist">
                            <li class="">
                                <a class="active show" id="tab_1" data-toggle="tab" href="#NewLeads" role="tab" aria-controls="home" aria-selected="true">
                                    Candidate Details
                                </a>
                            </li>
                            <li class="">
                                <a class="" id="tab_2" data-toggle="tab" href="#Follow" role="tab" aria-controls="profile" aria-selected="false">
                                    Client Details
                                </a>
                            </li>
                        </ul>
                        <div class="card m-0 hr-t hr-l hr-r hr-b no-shadow mb-4">
                            <div class="card-body detail-pills p-0">
                                <div class="fade active show" id="NewLeads" role="tabpanel" aria-labelledby="home-tab">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card flex-fill no-shadow">
                                                <div class="card-header hr-b">
                                                    <h5 class="card-title mb-0">
                                                        Candidate Details
                                                    </h5>
                                                </div>
                                                <div class="card-body p-b-0">
                                                    <div class="row position-relative">
                                                        <div class="p-profile mb-3 row-mg w-100 m-0">

                                                            <div class="p-profile-body col-md-12 pt-0 pl-3">
                                                                <table class="table table-striped hr-l hr-r m-0">

                                                                    <tbody>
                                                                        <tr>
                                                                            <td rowspan="3" style="width: 146px;">
                                                                                <div class="p-profile-body-2 pb-0 pt-0" style="width: 122px;">
                                                                                    <img src="@Model.candidateimage" class="p-profile-img p-0 bg-white hr-l hr-r hr-b hr-t">
                                                                                </div>
                                                                            </td>
                                                                            <td style="width: 200px;"><i class="far fa-fw fa-user-circle clr-golden"></i> <b>Name</b> :</td>


                                                                            <td>  @Model.CandidateName</td>

                                                                        </tr>
                                                                        <tr>
                                                                            <td><i class="far fa-fw fa-envelope clr-golden"></i> <b>Email</b> :</td>
                                                                            <td colspan="2">
                                                                                @Model.candidateEmail
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td><i class="fas fa-fw fa-map-marker-alt clr-golden"></i> <b>Location</b> :</td>
                                                                            <td colspan="2">
                                                                                @Model.Candidateloction
                                                                            </td>
                                                                        </tr>

                                                                    </tbody>

                                                                </table>
                                                                <table class="table table-striped hr-b hr-l hr-r m-0 tr-bg-reverse">
                                                                    <tbody class="border-0">

                                                                        <tr>
                                                                            <td style="width: 220px;"><i class="far fa-fw fa-building clr-golden"></i> <b>Industry</b> :</td>
                                                                            <td>
                                                                                @if (Model.Industry == "")
                                                                                {
                                                                                    <span>N/A</span>
                                                                                }
                                                                                else
                                                                                {@Model.Industry}

                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td><i class="fas fa-fw fa-crown clr-golden"></i> <b>Title</b> :</td>
                                                                            <td>
                                                                                @Model.candidateTitle
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td><i class="fas fa-fw fa-crown clr-golden"></i> <b>Interview Request Date</b> :</td>
                                                                            <td>
                                                                                @Model.CreatedDate
                                                                            </td>
                                                                        </tr>
                                                                        @if (Model.JobId > 0)
                                                                        {
                                                                            <tr>
                                                                                <td><i class="fas fa-fw fa-crown clr-golden"></i> <b>Job Title</b> :</td>
                                                                                <td>
                                                                                    <a style="text-decoration: underline" onclick="jobdetailbyid('@EncryptDecrypt.encrypt(Convert.ToString(Model.JobId))')" target="_blank" title="Click here to see the job details">@Model.Jobtitle</a>

                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="card-body pt-0">
                                                    <a class="btn-new-1" onclick="viewpublicprofilebyId('@EncryptDecrypt.encrypt(Convert.ToString(Model.CandidateId))')">
                                                        <i class="far fa-fw fa-user-circle"></i> View Detailed  Profile
                                                    </a>
                                                    <a class="btn-new-1" onclick="EditcandidatemovebyId('@EncryptDecrypt.encrypt(Convert.ToString(Model.CandidateId))')">
                                                        <i class="far fa-fw fa-edit"></i> Edit Candidate
                                                    </a>

                                                    @if (Model.JobId > 0)
                                                    {
                                                        <a class="btn-new-1" onclick="submitdetailedprofile(@Model.CandidateId,@Model.JobId)">
                                                            <i class="far fa-fw fa-file-alt"></i> Submit Detailed Profile
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <p class="mt-3 mb-0">
                                                            Client has not created the job
                                                        </p>
                                                    }
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="fade" id="Follow" role="tabpanel" aria-labelledby="profile-tab">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card flex-fill no-shadow">
                                                <div class="card-header hr-b">
                                                    <h5 class="card-title mb-0">
                                                        Client Details
                                                    </h5>
                                                </div>
                                                <div class="card-body p-b-0">
                                                    <div class="row position-relative">
                                                        <div class="p-profile mb-3 row-mg w-100 m-0">

                                                            <div class="p-profile-body col-md-12 pt-0 pl-3">
                                                                <table class="table table-striped hr-l hr-r m-0">

                                                                    <tbody>
                                                                        <tr>
                                                                            <td rowspan="3" style="width: 146px;">
                                                                                <div class="p-profile-body-2 pb-0 pt-0 p-profile-body-2-img" style="width: 122px;">
                                                                                    <div style="background-image: url('@Model.clientLogo'); "></div>
                                                                                </div>
                                                                            </td>

                                                                            <td style="width: 200px;"><i class="far fa-fw fa-user-circle clr-golden"></i> <b>Company Name</b> :</td>


                                                                            <td>   @Model.CompanyName</td>

                                                                        </tr>
                                                                        <tr>
                                                                            <td><i class="far fa-fw fa-envelope clr-golden"></i> <b>Company Website  </b> :</td>
                                                                            <td colspan="2">
                                                                                @Model.Website
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td><i class="fas fa-fw fa-map-marker-alt clr-golden"></i> <b>Company Location</b> :</td>
                                                                            <td colspan="2">
                                                                                @Model.Location
                                                                            </td>
                                                                        </tr>

                                                                    </tbody>
                                                                    <table class="table table-striped hr-b hr-l hr-r m-0 tr-bg-reverse">
                                                                        <tbody class="border-0">

                                                                            <tr>
                                                                                <td style="width: 220px;"><i class="fas fa-fw fa-globe clr-golden"></i> <b>Website</b> :</td>
                                                                                <td>
                                                                                    @Model.Website
                                                                                </td>
                                                                            </tr>

                                                                            @if (Model.JobId > 0)

                                                                            {

                                                                                <tr>
                                                                                    <td><i class="fas fa-fw fa-crown clr-golden"></i> <b>Job Title</b> :</td>
                                                                                    <td>
                                                                                        <a style="text-decoration: underline" onclick="jobdetailbyid('@EncryptDecrypt.encrypt(Convert.ToString(Model.JobId))')" target="_blank" title="Click here to see the job details">@Model.Jobtitle</a>

                                                                                    </td>
                                                                                </tr>
                                                                            }

                                                                            <tr>
                                                                                <td><i class="fas fa-fw fa-crown clr-golden"></i> <b>Interview Request Date</b> :</td>
                                                                                <td>
                                                                                    @Model.CreatedDate
                                                                                </td>
                                                                            </tr>
                                                                        </tbody>
                                                                    </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card flex-fill">
                    <div class="card-header hr-b header-golden-bg">
                        <h5 class="card-title mb-0">
                            Conversion with @Model.Name (Client)
                        </h5>
                    </div>
                    <div class="card-body pb-0">
                        <form class="input-group" id="msgsentgorm">
                            <textarea type="text" id="massege" autocomplete="off" rows="3" name="massege" class="form-control" placeholder="Type a message"></textarea>
                        </form>
                        <div class="col-md-12 p-0 text-right mt-3 pull-right">
                            <button class="btn-new-1 pull-right btn-36" type="button" onclick="sendClientconversationsaved(@Model.Id,@Model.ClientId,'@Model.Email','@Model.Name')">Send Message</button>
                            <input type="file" onchange="UploadAttachment()" name="Uploadfiles" id="Uploadfiles" class="portfolio-choose form-control cursor-pointer mr-2 w-300px pull-right" />
                        </div>
                        <div class="col-md-12 p-0 text-right pull-right">
                            <label id="lblUploadAttachmentName" class="upload-txt"></label>
                        </div>
                    </div>
                    <hr class="m-0" />
                    <div class="card-body">
                        <div class="position-relative">
                            <div class="chat-messages p-0">
                                @if (Model.ClienConversationcollection != null)
                                {
                                    foreach (var item in Model.ClienConversationcollection)
                                    {
                                        <div class="chat-message-left pb-4">
                                            <div class="flex-shrink-1 msg msg-anchor">
                                                <div class="font-weight-bold mb-1">
                                                    <span>
                                                        <span class="font-weight-500 fs-14">
                                                            @item.adminName
                                                        </span>
                                                        <span class="date-msz">(@item.CreatedDate)</span>
                                                    </span>
                                                </div>
                                                @Html.Raw(item.Description)
                                                @if (item.FileName != "")
                                                {
                                                    <a target="_blank" class="file-in-msg" href="@item.FilePath.Trim()" download> <i class="fas fa-fw fa-paperclip"></i>  @item.FileName</a>
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


<script>
    function CopyUrl(elementId) {
        var aux = document.createElement("input");
        aux.setAttribute("value", document.getElementById(elementId).innerHTML);
        document.body.appendChild(aux);
        aux.select();
        document.execCommand("copy");
        document.body.removeChild(aux);
        toastr.success("Detailed  Profile Url Copied successfully.");
    }
</script>
<script src="~/Areas/Admin/Admin/enquires.js"></script>
<script>
    var element = document.getElementById("Messages").setAttribute("aria-expanded", "true");
    var element = document.getElementById("Messages");
    element.classList.remove("collapsed");
    var element = document.getElementById("Messages");
    element.classList.add("show");
    var element = document.getElementById("Interview Requests+1");
    element.classList.add("active");
</script>