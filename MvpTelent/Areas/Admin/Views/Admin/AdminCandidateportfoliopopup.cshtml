@model Web.Model.Candidate.CandidateModel
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel1">
                Scouting Report
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
         
                    <form id="CandidateAwardspopup" method="POST">
                        <div class="row">
                            <div class="col-lg-12">
                               
                                <div class="form-group">
                                    <label class="form-label">Description</label>
                                    <textarea id="description" maxlength="1000" autocomplete="off" class="form-control" placeholder="Please enter description" name="description" type="text">@Model.description</textarea>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Visibility</label>
                                    @Html.DropDownListFor(m => m.visibleid, new SelectList(Model.visibleidCollection, "Id", "Name"), "Please select visibility", new { @class = "form-control", @id = "visibleid", @Name = "visibleid" })
                                </div>
                            </div>
                        </div>
                    </form>
            
        </div>
        <div class="modal-footer">
            <input type="button" class="btn btn-primary" onclick="AdminCandidateportfoliosave(@Model.Id,@Model.CandidateId)" value="Save">
            <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>