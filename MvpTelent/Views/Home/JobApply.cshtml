<div class="modal-dialog plan-login-popup ">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Candidate Login
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
            
       
        <div class="modal-body">

            <form id="ApplyJobform">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input id="username" maxlength="50" class="form-control" value="" tabindex="1" placeholder="Please enter email" name="username" type="text">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Password</label>
                            <input id="password" maxlength="15" autocomplete="off" class="form-control" tabindex="3" placeholder="Please enter password" name="password" type="password">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        Don't have an account?
                        <a href="/Home/SignUp" class="register clr-888"><u>Register</u></a>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <input type="button" name="" id="" class="btn btn-primary button-secondry" value="Login" onclick="CandidateLogins()">
            <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
<script>
    $("#password").keypress(function (e) {
        if (e.which == 13) {
            CandidateLogins();
        }
    });
</script>