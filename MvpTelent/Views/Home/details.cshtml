                    <div>
                        <form id="sendenquery">
                            <h5 class="mb-4">
                                Request for Interview
                            </h5>
                            <div class="form-group">
                                <input type="text" placeholder="Please enter your Name" value="@Model.CandidateName" name="EName" id="EName" maxlength="30" class="form-control" />
                            </div>
                            <div class="form-group">
