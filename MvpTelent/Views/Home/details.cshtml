                                            foreach (var item in Model.JobCollection)
                                            {
                                                <a class="dropdown-item" onclick="selectvalue('@item.Title',@item.Id,'@item.Location')"><span>@item.Title</span> <span> @item.Location</span>      </a>
                                            }
                                        }
                                    </div> 
                                    <div  >
                                        @Html.DropDownListFor(m => m.Id, new SelectList(Model.JobCollection, "Id", "Title"), "Please select a job", new { @class = "form-control select-lablel-hide", @Id = "jobid", @Name = "jobid" })

                                    </div>
                                </div> 
                            </div> 
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        <p class="mt-2 mb-0 pl-3">
                                            OR
                                        </p>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="file" name="file" id="file" placeholder="job url" class="file-choose-home-detail">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" placeholder="Please enter your message" name="Description" id="Description" rows="5"></textarea>
                            </div>
                            <div class="form-group sign-up-required-msg">
                                <input type="checkbox" id="CheckboxID" name="CheckboxID" />
                                You accepts our <a style="text-decoration: underline !important;" href="/Home/termscondition" target="_blank">
                                    Terms and Conditions
                                </a>
                            </div>
                            <button type="button" id="btnsend" name="btnsend" onclick="ClientSendenquery(@Model.Id, @Model.AccountType)" class="btn-new-1 w-100 mb-3 outer-btn">Send Email</button>
                            @if (Model.AccountType == 2)
                            {
                                if (Model.favoriteStatusId == 1)
                                {
                                    <button type="button" class="btn-new-1 w-100 mb-3 outer-btn" onclick="favoritecandidateremove(@Model.Id,@Model.ClientId,1,0)">Remove From Favorites List</button>
                                }
                                else
                                {
                                    <button type="button" class="btn-new-1 w-100 mb-3 outer-btn" onclick="favoritecandidate(@Model.Id,@Model.ClientId,0,0)">Add to My Favorites List</button>
                                }
                            }
                            else
                            {
                                <button type="button" onclick="favoritecandidate(@Model.Id,@Model.ClientId,0,1)" class="btn-new-1 w-100 mb-3 outer-btn">Add to My Favorites List</button>
                            }

                        </form>
                    </div>
                </div>
                @if (Model.candidaterefrencecollection != null)
