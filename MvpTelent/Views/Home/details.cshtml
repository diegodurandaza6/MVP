                            </div>
                            <div class="form-group">
                                <input type="text" placeholder="Please enter your phone number" value="@Model.CandidatePhone" name="Phone" id="Phone" maxlength="20" class="form-control" />
                            </div>
                            <div class="form-group">


                                <div class="dropdown dropdown_select_job">
                                    <a onclick="selectvalue('Please select a job','00','')" class="dropdown-toggle"  role="button" name="jobLocationid" id="jobLocationid" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Please select a job
                                    </a> 
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" onclick="selectvalue('Please select a job',0,'')">Please select a job </a>
                                        @if (Model.JobCollection != null)
