                                            }
                                            else
                                            {
                                                <li><i class="fas fa-map-marker-alt"></i> N/A</li>
                                            }
                                            @if (item.educationlevel.Length > 0)
                                            {
                                                <li><i class="fas fa-graduation-cap"></i> @item.educationlevel</li>
                                            }
                                            else
                                            {
                                                <li><i class="fas fa-graduation-cap"></i> N/A</li>
                                            }



                                        </ul>
                                    </article>
                                </div>
                            </li>
                        }
