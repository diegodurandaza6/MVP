@model Web.Model.Common.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .login-section {
        padding: 0 0; 
    }
</style>
<meta http-equiv='cache-control' content='no-cache'>
<meta http-equiv='expires' content='0'>
<meta http-equiv='pragma' content='no-cache'>
<section class="banner-inner" style="background-image: url('../../New_Content/images/login-banner.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-2">
                <h1>Sign In</h1>
            </div>
        </div>
    </div>
</section>
<section class="login-section">
    <div class="container">
        <div class="login-box animated fadeInUp">
            <div class="row no-gutters align-items-center">
                <div class="col-md-6">
                    <div class="login-left-wrapper">
                        <figure class="login-img-wrapper">
                            <img src="/New_Content/images/login-img.png" class="img-fluid">
                        </figure>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="home-login-main">
                        <div class="home-login-box">
                            <h2>
                                Sign In To Your Account
                            </h2>
                            <form class="home-login-form" id="loginform">
                                <div class="form-group alert-outer">
                                    <label>
                                        Email Address
                                    </label>
                                    <input class="form-control" type="text" id="username" autocomplete="off" name="username" value="@Model.Email" placeholder="Please enter your email address" maxlength="50">
                                </div>
                                <div class="form-group">
                                    <label>
                                        Password
                                    </label>
                                    <input class="form-control" type="password" name="password" id="password" value="@Model.Password" placeholder="Please enter your password" maxlength="15">
                                </div>
                                <div class="form-check-forgot">
                                    <div>
                                        <input type="checkbox" @(Model.KeepLogIn == 1 ? "checked" : string.Empty) name="KeepLogIn" id="KeepLogIn">
                                        <label for="KeepLogIn">Remember me</label>
                                    </div>
                                    <div>
                                        <a href="/Home/ForgotPassword">Forgot Password?</a>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <button type="button" id="Clientlogin" name="Clientlogin" class="btn btn-primary text-center w-100 h-50px" onclick="CandidateLogin()">Login</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        Don't have an account?
                                        <a href="/Home/SignUp" class="text-danger register">Register</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $("#password").keypress(function (e) {
        debugger;
        if (e.which === 13) {
            CandidateLogin();
        }
    });
</script>


