<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel1">Apply as a guest</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="addgustcandidate">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">First Name</label>
                            <input id="firstname" maxlength="30" autocomplete="off" class="form-control" tabindex="1" placeholder="Please enter first name" name="firstname" type="text">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Last Name</label>
                            <input id="lastname" maxlength="30" autocomplete="off" class="form-control" tabindex="2" placeholder="Please enter last name" name="lastname" type="text">
                        </div>
                        <div class="form-group">
                            <label class="form-label"> Phone Number</label>
                            <input id="Phone" autocomplete="off" class="form-control" tabindex="3" name="Phone" placeholder="Please enter phone number" maxlength="15" type="text">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input id="email" autocomplete="off" class="form-control" tabindex="4" name="email" placeholder="Please enter email" maxlength="50" type="text">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Resume</label>
                            <input id="resumefile" autocomplete="off" class="form-control" name="resumefile" tabindex="8" type="file">
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <input type="button" name="companybtn" id="companybtn" class="btn btn-primary" onclick="creategustcandidate(@Model.Id)" value="Apply">
            <button type="button" class="btn btn-light button-primary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>