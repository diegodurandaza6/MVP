
@model Web.Model.Candidate.CandidateModel
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel1">Licenses & Certification </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">

            <form id="CandidateEducationpopup" method="POST">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">License & Certification</label>
                            <input id="education" maxlength="50" autocomplete="off" class="form-control" value="@Model.Education" placeholder="Please enter license & certification" name="education" type="text">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Education Start</label>
                            <input id="year" maxlength="15" autocomplete="off" class="form-control date-picker" value="@Model.year" placeholder="Please enter start date" name="year" type="date">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Education End </label>
                            <input id="endyear" maxlength="15" autocomplete="off" class="form-control date-picker" value="@Model.EndYear" placeholder="Please enter end date" name="endyear" type="date">
                        </div>
                        <div class="form-group">
                            <label class="form-label">University</label>
                            <input id="uunivarsity" maxlength="80" autocomplete="off" class="form-control" value="@Model.univarsity" placeholder="Please enter university" name="uunivarsity" type="text">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Description</label>
                            <textarea id="description" maxlength="1000" autocomplete="off" class="form-control" placeholder="Please enter description" name="description" type="text">@Model.description</textarea>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Visibility </label>
                            @Html.DropDownListFor(m => m.visibleid, new SelectList(Model.visibleidCollection, "Id", "Name"), "Please select", new { @class = "form-control", @id = "visibleid", @Name = "visibleid" })
                        </div>
                    </div>
                </div>
            </form>

        </div>
        <div class="modal-footer">
            <input type="button" class="btn btn-primary" onclick="AddUpdateLicensesCertification(@Model.Id,@Model.CandidateId)" value="Save">
            <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
<script>
    $('#year').datepicker({
        changeMonth: true,
        changeYear: true,
        showButtonPanel: true,
        dateFormat: "d-m-yy"
    });
    $('#endyear').datepicker({
        changeMonth: true,
        changeYear: true,
        showButtonPanel: true,
        dateFormat: "d-m-yy"
    });
</script>
