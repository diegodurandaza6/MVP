@model Web.Model.Candidate.CandidateModel
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel1">Reference</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="refrencesform" name="form-validation" method="POST">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label" for="validation-username">Name</label>
                            <input id="Name" maxlength="30" class="form-control" value="@Model.Name" placeholder="Please enter name" name="Name" type="text">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label" for="validation-username">Mobile Number</label>
                            <input id="Phone" maxlength="15" class="form-control" value="@Model.Phone" placeholder="Please enter mobile number" name="Phone" type="text">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label" for="validation-username">E-Mail</label>
                            <input id="RefrenceeMail" maxlength="50" class="form-control" value="@Model.Email" placeholder="Please enter preferred email" name="RefrenceeMail" type="text">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label" for="validation-username"> Title</label>
                            <input id="Title" maxlength="100" class="form-control" value="@Model.Title" placeholder="Please enter title" name="Title" type="text">
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <input type="button" name="refences" id="refences" class="btn btn-primary" onclick="Candididaterefencessave(@Model.Id,@Model.CandidateId)" value="Save">
            <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>