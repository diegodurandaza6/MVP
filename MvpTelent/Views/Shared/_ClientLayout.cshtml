<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MVP Talent Market</title>
    <link rel="icon" type="image/x-icon" href="~/New_Content/images/mvp_favicon.png">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&amp;display=swap" rel="stylesheet">
    <link href="~/Client_Content/css/light.css" rel="stylesheet" />
    <link href="~/Client_Content/css/custom.css" rel="stylesheet" />
    <script src="~/Client_Content/js/settings.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="~/Scripts/daterange/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/datetimepicker/jquery.datetimepicker.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700;800;900&display=swap" rel="stylesheet">
    <link href="~/New_Content/css/toastr.css" rel="stylesheet" />
    <style>
        .sidebar {
            min-width: 252px;
            max-width: 252px;
        }

        body:not([data-sidebar-position=right]) .sidebar.collapsed {
            margin-left: -252px;
        }
    </style>
</head>
<body data-theme="default" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky">
    <div class="wrapper">
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand-2" href="/Home/Index">
                    <img src="~/Client_Content/img/mvp_logo2.png" />
                    <div class="sidebar-brand-2-text">
                        <span>Your Confidential  </span>
                        <span>Talent Market</span>
                    </div>
                </a>
                <ul class="sidebar-nav">
                    <li class="sidebar-item" id="dashboard">
                        <a class="sidebar-link" href="~/Client/dashboard">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-item" id="companyprofile">
                        <a class="sidebar-link" href="/Client/CompanyProfile">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">My Profile</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#jobsmenu" data-toggle="collapse" class="sidebar-link collapsed" id="jobsbtnmenu">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">Jobs</span>
                        </a>
                        <ul id="jobsmenu" class="sidebar-dropdown list-unstyled collapse " data-parent="#sidebar">
                            <li class="sidebar-item"><a class="sidebar-link" href="/Client/Jobs" id="postajobmenu">Post A Job</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="/Client/JobList" id="myjobsmenu">My Jobs</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="/Client/applicant" id="applicantspipeline">Applicants Pipeline</a></li> 
                        </ul>
                    </li>
                    <li class="sidebar-item" id="">
                        <a class="sidebar-link" href="/client/candidate">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">Search Candidates</span>
                        </a>
                    </li>
                    @*<li class="sidebar-item" id="myfavourite">
                        <a class="sidebar-link" href="/client/myfavorite">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">My Favorite Candidates</span>
                        </a>
                    </li>*@ 
                    <li class="sidebar-item " id="interviewschedulelist">
                        <a class="sidebar-link" href="/Client/interviewschedulelist">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">Interviews</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#messages" data-toggle="collapse" class="sidebar-link collapsed" id="messagesmenu">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">Messages</span>
                        </a>
                        <ul id="messages" class="sidebar-dropdown list-unstyled collapse " data-parent="#sidebar">
                            <li class="sidebar-item"><a class="sidebar-link" href="/Client/messages" id="generalmessages">Messages From Admin</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="/Client/clientenquireylist" id="interviewrequest">Interview Request Sent</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="/Client/pipelinemessageslist" id="messagestocandidates">Messages To Candidates</a></li>
                           
                        </ul>
                    </li>
                    <li class="sidebar-item" id="mycandidate">
                        <a onclick="Logout()" class="sidebar-link">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">Logout</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="main">
            <nav class="navbar navbar-expand navbar-light navbar-bg">
                <a class="sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav navbar-align">
                        <li class="nav-item dropdown">
                            <a class="nav-icon dropdown-toggle" href="#" id="messagesDropdown" data-toggle="dropdown">
                                <div class="position-relative" data-toggle="tooltip" data-placement="top">
                                    <i class="align-middle" data-feather="bell"></i>
                                    <span class="indicator" title="Total unread message" id="totalcount">0</span>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" onclick="gotolist('/Client/clientenquireylist')">
                                    Request To Interview (<span id="Unreadcount"> </span>)
                                </a>
                                <a class="dropdown-item" onclick="gotolist('/Client/messages')">
                                    General Messages (<span id="generalmessagecount"> </span>)
                                </a>
                                <a class="dropdown-item" onclick="gotolist('/Client/pipelinemessageslist')">
                                    Interview Pipeline Messages (<span id="pipelinemessagecount"> </span>)
                                </a>
                                <a class="dropdown-item" onclick="gotolist('/Client/submitedprofile')">
                                    Submited Profile Messages (<span id="submitedprofilecount"> </span>)
                                </a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-icon dropdown-toggle d-inline-block d-sm-none" data-toggle="dropdown">
                                <i class="align-middle" data-feather="settings"></i>
                            </a>
                            @if (Session["UsertypeId"] != null)
                            {
                                if (Session["UsertypeId"].ToString() == "2")
                                {
                                    <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-toggle="dropdown">
                                        <span class="text-dark fs-15 username-1">
                                            <span>
                                                Welcome
                                            </span>
                                            <span>
                                                <span>@Session["Name"].ToString()</span>
                                            </span>
                                        </span>
                                        <div class="avatar_2" style="background-image: url('@Session["Image"].ToString()');"></div>

                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="~/Client/dashboard"><i class="align-middle mr-1" data-feather="pie-chart"></i> Dashboard</a>
                                        <a class="dropdown-item" href="/Client/paymenthistory"><i class="mr-1 far fa-fw fa-money-bill-alt"></i> My Plan & Payment history</a>
                                        <a class="dropdown-item" href="~/Client/ChangePassword"><i class="align-middle mr-1" data-feather="settings"></i> Change password</a>
                                        <a class="dropdown-item" onclick="Logout()"><i class="align-middle mr-1" data-feather="power"></i> Logout</a>
                                    </div>
                                }
                            }
                            else
                            {
                                <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-toggle="dropdown">
                                    <span class="text-dark"></span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="/Home/signUp"><i class="align-middle mr-1" data-feather=" user-plus"></i> Sign Up</a>
                                    <a class="dropdown-item" href="/Home/Login"><i class="align-middle mr-1" data-feather="log-in"></i> SIGN IN </a>
                                </div>
                            }
                        </li>
                    </ul>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>
    <script src="~/Scripts/daterange/jquery-ui.min.js"></script>
    <script src="~/Areas/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Areas/Content/js/sb-admin-2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/MvpTelent_js/Login.js"></script>
    <script src="~/MvpTelent_js/toster/jquery.toaster.js"></script>
    <script src="~/Client_Content/js/app.js"></script>
    <link href="~/calendar/fullcalendar.css" rel="stylesheet" />
    <script src="~/calendar/moment.min.js"></script>
    <script src="~/calendar/fullcalendar.min.js"></script>
    <script src="~/Content/datetimepicker/jquery.datetimepicker.full.min.js"></script>
    <script>
        function gotolist(url) {
            window.location.href = url;
        }
        $.get("/Client/getallunreadmessage", function (data) {
            $("#totalcount").html(data.totalcount);
            $("#Unreadcount").html(data.Unreadcount);
            $("#generalmessagecount").html(data.generalmessagecount);
            $("#pipelinemessagecount").html(data.pipelinemessagecount);
            $("#submitedprofilecount").html(data.submitedprofilecount);
        });
    </script>
