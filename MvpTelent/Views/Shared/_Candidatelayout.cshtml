<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MVP Talent Market</title>
    <link rel="icon" type="image/x-icon" href="~/New_Content/images/mvp_favicon.png">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&amp;display=swap" rel="stylesheet">
    <link href="~/Client_Content/css/light.css" rel="stylesheet" />
    <link href="~/Client_Content/css/custom.css" rel="stylesheet" />
    <script src="~/Client_Content/js/settings.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="~/Scripts/daterange/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/datetimepicker/jquery.datetimepicker.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700;800;900&display=swap" rel="stylesheet">
    <link href="~/New_Content/css/toastr.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand-2" href="/Home/Index">
                    <img src="~/Client_Content/img/mvp_logo2.png" />
                    <div class="sidebar-brand-2-text">
                        <span>Your Confidential  </span>
                        <span>Talent Market</span>
                    </div>
                </a>
                <ul class="sidebar-nav">
                    <li class="sidebar-item" id="dashboard">
                        <a class="sidebar-link" href="/Candidates/Dashboard">
                            <i class="align-middle" data-feather="chevrons-right"></i>  <span class="align-middle">Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-item" id="">
                        <a class="sidebar-link" href="/Home/Job">
                            <i class="align-middle" data-feather="chevrons-right"></i>  <span class="align-middle">Search Jobs</span>
                        </a>
                    </li>
                    <li class="sidebar-item " id="myprofile">
                        <a class="sidebar-link" href="/Candidates/myProfile">
                            <i class="align-middle" data-feather="chevrons-right"></i><span class="align-middle">Detailed Profile</span>
                        </a>
                    </li>
                    <li class="sidebar-item " id="confidentialprofile">
                        <a class="sidebar-link" href="/Candidates/confidentialprofile">
                            <i class="align-middle" data-feather="chevrons-right"></i><span class="align-middle">Confidential Profile</span>
                        </a>
                    </li>
                    <li class="sidebar-item " id="myappliedjob">
                        <a class="sidebar-link" href="/Candidates/MyappliedJob">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">My Applied Jobs</span>
                        </a>
                    </li>
                    <li class="sidebar-item " id="mysavedjoblist">
                        <a class="sidebar-link" href="/Candidates/MySavedJobList">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">My Saved jobs</span>
                        </a>
                    </li>


                    <li class="sidebar-item " id="pipelinerequest">
                        <a class="sidebar-link" href="/Candidates/messages">
                            <i class="align-middle" data-feather="chevrons-right"></i><span class="align-middle">Interview Messages</span>
                        </a>
                    </li>
                    <li class="sidebar-item " id="generalmessages">
                        <a class="sidebar-link" href="/Candidates/generalmessagelist">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">Messages from Admin </span>
                        </a>
                    </li>
                    <li class="sidebar-item " id="plan&paymenthistory">
                        <a class="sidebar-link" href="/Candidates/paymenthistory">
                            <i class="align-middle" data-feather="chevrons-right"></i> <span class="align-middle">Plan & Payment History </span>

                        </a>
                    </li>

                </ul>
            </div>
        </nav>
        <div class="main">
            <nav class="navbar navbar-expand navbar-light navbar-bg">
                <a class="sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>
                <div class="d-none d-sm-inline-block border-0">
                    <div class="input-group input-group-navbar">
                        <span class="clr-golden text-underline">
                            <b>Contact Your Recruitment Success Manager</b> <br />
                            <a href="/Candidates/generalmessagelist" title="Contact Your Recruitment Success Manager"><b>Message</b> </a>| <b>Call: +1 401-354-7251</b>
                        </span>
                    </div>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav navbar-align">
                        <li class="nav-item dropdown">
                            <a class="nav-icon dropdown-toggle" href="#" id="messagesDropdown" data-toggle="dropdown">
                                <div class="position-relative" data-toggle="tooltip" data-placement="top" data-original-title="Total Count">
                                    <i class="align-middle" data-feather="bell"></i>
                                    <span class="indicator" title="Total unread message" id="totalcount">0</span>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" onclick="gotolist('/Candidates/generalmessagelist')">
                                    General Messages   &nbsp; &nbsp;(<span id="generalmessagecount"> </span>)
                                </a>
                                <a class="dropdown-item" onclick="gotolist('/Candidates/messages')">
                                    Interview Messages  &nbsp; &nbsp; (<span id="pipelinemessagecount"> </span>)
                                </a>
                            </div>
                        </li>
                        @if (Session["UsertypeId"] != null)
                        {
                            if (Session["UsertypeId"].ToString() == "3")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-icon dropdown-toggle d-inline-block d-sm-none" href="#" data-toggle="dropdown">
                                        <i class="align-middle" data-feather="settings"></i>
                                    </a>
                                    <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-toggle="dropdown">
                                        <span class="text-dark fs-15 username-1">
                                            <span>
                                                Welcome
                                            </span>
                                            <span>
                                                <span>@Session["Name"].ToString()</span>
                                            </span>
                                        </span>
                                        <div class="avatar_2" style="background-image: url('@Session["Image"].ToString()');"></div>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="/Candidates/Dashboard"><i class="fas fa-fw fa-chart-pie mr-1 clr-golden"></i> Dashboard</a>
                                        <a class="dropdown-item" href="/Candidates/myProfile"><i class="far fa-fw fa-user-circle mr-1 clr-golden"></i> Detailed Profile</a>
                                        <a class="dropdown-item" href="/Candidates/Setting"><i class="fas fa-fw fa-cog mr-1 clr-golden"></i> Change Password</a>
                                        <a class="dropdown-item" href="/Candidates/paymenthistory"><i class="fas fa-fw fa-dollar-sign mr-1 clr-golden"></i> Payment History</a>
                                        <a class="dropdown-item" onclick="Logout()"><i class="fas fa-fw fa-sign-out-alt mr-1 clr-golden"></i> Logout</a>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link " href="/Home/signUp">
                                        <span class="text-dark">Sign Up</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Home/Login">
                                        <span class="text-dark">Sign In</span>
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link " href="/Home/signUp">
                                    <span class="text-dark">Sign Up</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Login">
                                    <span class="text-dark">SIGN IN </span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>
    <script src="~/Scripts/daterange/jquery-ui.min.js"></script>
    <script src="~/Areas/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Areas/Content/js/sb-admin-2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/MvpTelent_js/Login.js"></script>
    <script src="~/MvpTelent_js/toster/jquery.toaster.js"></script>
    <script src="~/Client_Content/js/app.js"></script>
    <link href="~/calendar/fullcalendar.css" rel="stylesheet" />
    <script src="~/calendar/moment.min.js"></script>
    <script src="~/calendar/fullcalendar.min.js"></script>
    <script src="~/Content/datetimepicker/jquery.datetimepicker.full.min.js"></script>
    <script>
        function gotolist(url) {
            window.location.href = url;
        }
        $.get("/Candidates/getallunreadmessage", function (data) {
            $("#totalcount").html(data.totalcount);
            $("#Unreadcount").html(data.Unreadcount);
            $("#generalmessagecount").html(data.generalmessagecount);
            $("#pipelinemessagecount").html(data.pipelinemessagecount);
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).contextmenu(function () {
                return false;
            });
        });
    </script>
    
</body>
</html>