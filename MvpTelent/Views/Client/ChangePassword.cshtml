@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<style>
    label.error {
        color: red !important;
    }
</style>
<main class="content">
    <div class="container-fluid p-0">
        <div class="row mb-2 mb-xl-4">
            <div class="col-auto d-none d-sm-block breadcrumb-1">
                <h3>
                    Change Password
                </h3>
                <span>
                    Overview of Latest Month
                </span>
            </div>
        </div>
        <hr class="m-0" />
        <div class="row">
            <div class="col-md-12">
                <div class="changepassword-section">
                    <div class="card changepassword-section-inner">
                        <div class="card-header hr-b-1">
                            <h5 class="card-title m-0">
                                Change Password
                            </h5>
                        </div>
                        <div class="card-body">
                            <form id="ChangePasswordform">
                                <div class="row">
                                    <div class="col-md-12 p-0">
                                        <div class="col-12 col-lg-12">
                                            <div class="form-group">
                                                <label>Old Password</label>
                                                <input type="password" name="oldpassword" autocomplete="off" id="oldpassword" placeholder="Please enter current password" maxlength="20" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-12 col-lg-12">
                                            <div class="form-group">
                                                <label>New Password</label>
                                                <input type="password" placeholder="Please enter new password" name="newpassword" id="newpassword" autocomplete="off" maxlength="20" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-12 col-lg-12">
                                            <div class="form-group">
                                                <label>Confirm Password</label>
                                                <input type="password" placeholder="Please enter confirm password" name="confirmpassword" autocomplete="off" id="confirmpassword" maxlength="20" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-12 col-lg-12 text-right">
                                            <button class="btn-new-1" type="button" onclick="ChangePasswordEmail(@Model.UserId)">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    var element = document.getElementById("changepassword");
    element.classList.add("active");
</script>